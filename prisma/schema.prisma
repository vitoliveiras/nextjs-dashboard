generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// defines the models that will be used to the Prisma to generate relational tables

model User {
  id       String @id @default(uuid())
  name     String
  email    String @unique
  password String

  // how the table will be named
  @@map("users")
}